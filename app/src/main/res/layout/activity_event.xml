<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_instruction"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.arvind.svceinterrupt.EventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            />
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/eventname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Pitch Perfect"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/eventdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15.7dp"
            android:layout_marginRight="9.3dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/ruleshead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Rules"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/eventrules"
            android:textColor="#ffffff"
            android:layout_marginLeft="12.7dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/contactid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Contact"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/contact"
            android:textColor="#ffffff"
            android:layout_marginLeft="12.7dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:text=" "
            android:textColor="#ffffff"
            android:layout_marginLeft="12.7dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

</ScrollView>
