
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:gravity="center"
    android:id="@+id/ll"
    tools:context="layout.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/login_page"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView

                android:layout_gravity="center"
                android:src="@drawable/intt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:fontFamily="@font/monts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOBILE NUMBER"
                android:textSize="20dp"
                android:textColor="#888888"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                />

            <EditText
                android:fontFamily="@font/monts"
                android:id="@+id/email"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"/>


            <TextView
                android:fontFamily="@font/monts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PASS"
                android:text="PASSWORD"
                android:textSize="20dp"
                android:textColor="#888888"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <EditText
                android:fontFamily="@font/monts"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/password" />

            <Button
                android:fontFamily="@font/monts"
                android:id="@+id/login"
                android:layout_gravity="center"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8734A"

                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />

            <TextView
                android:fontFamily="@font/monts"
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="New user ?"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginTop="35dp"
                />


        </LinearLayout>



        <LinearLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/prof_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
              android:layout_gravity="end"
                android:id="@+id/signout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="#212121"
                    android:src="@drawable/power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/monts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="USER INFORMATION"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"/>

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/dusername"
                android:fontFamily="@font/monts"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="20dp"

                    android:padding="5dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="COLLEGE:"
                    android:fontFamily="@font/monts"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAllCaps="true"
                    android:id="@+id/dcollege"
                    android:textSize="15dp"
                    android:fontFamily="@font/monts"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="CONTACT:
  NO   "
                    android:fontFamily="@font/monts"
                    android:textStyle="bold"
                    android:textSize="15dp"
                     />

                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAllCaps="true"
                    android:id="@+id/dnum"
                    android:textSize="15dp"
                    android:fontFamily="@font/monts"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="EMAIL  :"
                    android:fontFamily="@font/monts"
                    android:textStyle="bold"
                    android:textSize="15dp"
                   />
                <TextView
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/demail"
                    android:textSize="15dp"
                    android:fontFamily="@font/monts"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/reglist"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click here to Change/View Events, you have registered for."
                android:fontFamily="@font/monts"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"/>



        </LinearLayout>

    </LinearLayout>







</ScrollView>
